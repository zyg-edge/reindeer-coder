		"@octokit/rest": "^22.0.1",
		"@types/pg": "^8.16.0",
		"@xterm/addon-fit": "^0.10.0",
		"@xterm/xterm": "^5.5.0",
		"auth0": "^5.2.0",
		"better-sqlite3": "^11.7.0",
		"jose": "^6.1.0",
		"node-pty": "^1.0.0",
		"pg": "^8.17.1",
		"uuid": "^13.0.0"
	}
}
