# =============================================================================
# Reindeer Coder - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment

# =============================================================================
# Quick Start (Local Development)
# =============================================================================
# For quick local development without Auth0, just set:
# DB_TYPE=sqlite
# DISABLE_AUTH=true
# Then run: npm run dev

# =============================================================================
# Application
# =============================================================================
APP_URL=http://localhost:3000

# Disable authentication (for local development)
# Set to 'true' to skip Auth0 and use a default local user
DISABLE_AUTH=false

# =============================================================================
# Auth0 Configuration (skip if DISABLE_AUTH=true)
# =============================================================================
# Server-side
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-app-domain.com

# Client-side (VITE_ prefix makes them available in browser)
VITE_AUTH0_DOMAIN=your-tenant.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_ORG_ID=your-org-id
VITE_AUTH0_AUDIENCE=https://your-app-domain.com

# =============================================================================
# Database Configuration
# =============================================================================
# DB_TYPE: 'sqlite' (default) or 'postgres'
DB_TYPE=sqlite

# SQLite (when DB_TYPE=sqlite)
DB_FILENAME=vibe-coding.db

# PostgreSQL (when DB_TYPE=postgres)
# Option 1: Connection string
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Individual parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=vibe_coding
# DB_USER=postgres
# DB_PASSWORD=your-password

# CloudSQL (GCP)
# DATABASE_URL=/cloudsql/PROJECT:REGION:INSTANCE
# DB_NAME=vibe_coding
# DB_USER=your-sa@your-project.iam

# =============================================================================
# GCP Configuration
# =============================================================================
GCP_PROJECT_ID=your-gcp-project
GCP_ZONE=us-central1-a
GCP_NETWORK=default
GCP_SUBNET=

# Service account for VMs (has Vertex AI access)
GCP_VM_SERVICE_ACCOUNT=your-vm-sa@your-project.iam.gserviceaccount.com

# Client-side (for SSH command display)
VITE_GCP_PROJECT_ID=your-gcp-project

# =============================================================================
# VM Configuration
# =============================================================================
VM_IMAGE_FAMILY=ubuntu-2204-lts
VM_IMAGE_PROJECT=ubuntu-os-cloud
VM_MACHINE_TYPE=e2-standard-4
VM_USER=vibe
VITE_VM_USER=vibe

# =============================================================================
# Git Configuration
# =============================================================================
# Git provider: 'github' or 'gitlab'
GIT_BASE_URL=https://github.com
GIT_ORG=your-org
GIT_USER=x-access-token

# For GitHub: Use GitHub App authentication
GITHUB_APP_ID=your-app-id
GITHUB_INSTALLATION_ID=your-installation-id
# GITHUB_APP_PRIVATE_KEY_SECRET=projects/PROJECT_NUM/secrets/SECRET_NAME/versions/latest

# For GitLab: Use Personal Access Token
# GIT_BASE_URL=https://gitlab.com
# GIT_USER=oauth2
# GITLAB_API_URL=https://gitlab.com/api/v4
# GITLAB_TOKEN=glpat-xxx

# Email domain for fallback addresses
EMAIL_DOMAIN=your-domain.com

# =============================================================================
# API Keys (for coding agents)
# =============================================================================
# Anthropic (Claude Code)
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI (Codex)
OPENAI_API_KEY=sk-xxx

# Google (Gemini CLI) - optional, uses VM service account if not set
GOOGLE_API_KEY=

# Linear (issue tracking)
LINEAR_API_KEY=lin_api_xxx

# =============================================================================
# Cloud Run Secret Manager Paths (Production)
# =============================================================================
# When running on Cloud Run, use Secret Manager paths instead of direct keys
# ANTHROPIC_API_KEY_SECRET=projects/PROJECT_NUM/secrets/SECRET_NAME/versions/latest
# OPENAI_API_KEY_SECRET=projects/PROJECT_NUM/secrets/SECRET_NAME/versions/latest
# GITLAB_TOKEN_SECRET=projects/PROJECT_NUM/secrets/SECRET_NAME/versions/latest
# LINEAR_API_KEY_SECRET=projects/PROJECT_NUM/secrets/SECRET_NAME/versions/latest
# GOOGLE_API_KEY_SECRET=projects/PROJECT_NUM/secrets/SECRET_NAME/versions/latest
# SECRET_IMPERSONATE_SA=your-sa@your-project.iam.gserviceaccount.com

# =============================================================================
# Optional Settings
# =============================================================================
# Linear monitor polling interval (ms, default: 60000)
# LINEAR_POLL_INTERVAL_MS=60000

# Claude CLI path (default: 'claude')
# CLAUDE_PATH=/path/to/claude
