{
	"name": "reindeer-coder",
	"displayName": "Reindeer Coder",
	"description": "Connect to your Reindeer Coder remote workspaces",
	"version": "0.3.1",
	"publisher": "reindeer-ai",
	"icon": "resources/icon.png",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:reindeerCoderTasks"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "reindeer-coder",
					"title": "Reindeer Coder",
					"icon": "resources/reindeer-activity.svg"
				}
			]
		},
		"views": {
			"reindeer-coder": [
				{
					"id": "reindeerCoderTasks",
					"name": "Tasks"
				}
			]
		},
		"commands": [
			{
				"command": "reindeerCoder.configureServer",
				"title": "Reindeer Coder: Configure Server"
			},
			{
				"command": "reindeerCoder.login",
				"title": "Reindeer Coder: Login"
			},
			{
				"command": "reindeerCoder.logout",
				"title": "Reindeer Coder: Logout"
			},
			{
				"command": "reindeerCoder.refreshTasks",
				"title": "Reindeer Coder: Refresh Tasks",
				"icon": "$(refresh)"
			},
			{
				"command": "reindeerCoder.createNewTask",
				"title": "Reindeer Coder: New Task",
				"icon": "$(add)"
			},
			{
				"command": "reindeerCoder.connectTask",
				"title": "Open Workspace (Remote-SSH)",
				"icon": "$(folder-opened)"
			},
			{
				"command": "reindeerCoder.connectTerminalOnly",
				"title": "Open Terminal",
				"icon": "$(terminal)"
			},
			{
				"command": "reindeerCoder.testFromLocalBrowser",
				"title": "Test from Local Browser",
				"icon": "$(browser)"
			},
			{
				"command": "reindeerCoder.disconnectTask",
				"title": "Disconnect from Task"
			},
			{
				"command": "reindeerCoder.showDebugInfo",
				"title": "Reindeer Coder: Show Debug Info"
			},
			{
				"command": "reindeerCoder.switchTmuxSession",
				"title": "Switch Tmux Session"
			}
		],
		"menus": {
			"terminal/context": [
				{
					"command": "reindeerCoder.switchTmuxSession",
					"group": "navigation"
				}
			],
			"view/title": [
				{
					"command": "reindeerCoder.createNewTask",
					"when": "view == reindeerCoderTasks",
					"group": "navigation"
				},
				{
					"command": "reindeerCoder.refreshTasks",
					"when": "view == reindeerCoderTasks",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "reindeerCoder.connectTask",
					"when": "view == reindeerCoderTasks && viewItem == task",
					"group": "inline@1"
				},
				{
					"command": "reindeerCoder.connectTerminalOnly",
					"when": "view == reindeerCoderTasks && viewItem == task",
					"group": "inline@2"
				},
				{
					"command": "reindeerCoder.testFromLocalBrowser",
					"when": "view == reindeerCoderTasks && viewItem == task",
					"group": "inline@3"
				}
			]
		},
		"configuration": {
			"title": "Reindeer Coder",
			"properties": {
				"reindeerCoder.serverUrl": {
					"type": "string",
					"default": "",
					"description": "Reindeer Coder server URL (e.g., https://your-server.example.com)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "node build.js",
		"watch": "node build.js --watch",
		"package": "vsce package"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^20.10.0",
		"@types/vscode": "^1.85.0",
		"@vscode/vsce": "^3.7.1",
		"esbuild": "^0.19.0",
		"typescript": "^5.3.0"
	},
	"dependencies": {
		"axios": "^1.6.0"
	}
}
