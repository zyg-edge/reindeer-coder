{
	"name": "reindeer-coder",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"app",
		"vscode-extension"
	],
	"scripts": {
		"dev": "npm run --workspace=app dev",
		"dev:ext": "npm run --workspace=vscode-extension watch",
		"build": "npm run --workspace=app build",
		"build:ext": "npm run --workspace=vscode-extension build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "npm run --workspace=app check"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8"
	}
}
